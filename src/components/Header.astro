<header class="sticky top-0 z-50 bg-background border-b border-border">
  <div class="container mx-auto px-4">
    <div class="flex items-center h-16">
      <!-- Logo -->
      <div class="flex-shrink-0">
        <a href="https://trueviewsewer.com/" class="text-2xl font-bold text-neutral-dark hover:text-blue-accent transition-colors">
          True View Inspections
        </a>
      </div>
      
      <!-- Desktop Navigation - Centered -->
      <nav class="hidden md:flex items-center justify-center flex-1 space-x-8">
        <a href="https://trueviewsewer.com/" class="text-slate-foreground hover:text-blue-accent transition-colors">
          Home
        </a>
        <a href="https://trueviewsewer.com#services" class="text-slate-foreground hover:text-blue-accent transition-colors">
          Services
        </a>
        <a href="https://trueviewsewer.com#sample-report" class="text-slate-foreground hover:text-blue-accent transition-colors">
          Sample Report
        </a>
        <a href="https://trueviewsewer.com/#about" class="text-slate-foreground hover:text-blue-accent transition-colors">
          About
        </a>
        <a href="/blog/" class="text-slate-foreground hover:text-blue-accent transition-colors">
          Blog
        </a>
        <a href="https://trueviewsewer.com/#contact" class="text-slate-foreground hover:text-blue-accent transition-colors">
          Contact
        </a>
      </nav>
      
      <!-- Schedule Button - Right Side -->
      <div class="hidden md:flex flex-shrink-0">
        <a href="https://trueviewsewer.com/#booking" class="bg-blue-accent text-white px-4 py-2 rounded font-medium hover:bg-blue-accent/90 transition-colors">
          Schedule Now
        </a>
      </div>
      
      <!-- Mobile Menu Button -->
      <button id="mobile-menu-button" class="md:hidden p-2 text-slate-foreground hover:text-blue-accent">
        <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"></path>
        </svg>
      </button>
    </div>
    
    <!-- Mobile Navigation -->
    <nav id="mobile-menu" class="hidden md:hidden pb-4">
      <div class="flex flex-col space-y-4">
        <a href="https://trueviewsewer.com/" class="text-slate-foreground hover:text-blue-accent transition-colors">
          Home
        </a>
        <a href="https://trueviewsewer.com#services" class="text-slate-foreground hover:text-blue-accent transition-colors">
          Services
        </a>
        <a href="https://trueviewsewer.com#sample-report" class="text-slate-foreground hover:text-blue-accent transition-colors">
          Sample Report
        </a>
        <a href="https://trueviewsewer.com/#about" class="text-slate-foreground hover:text-blue-accent transition-colors">
          About
        </a>
        <a href="/blog/" class="text-slate-foreground hover:text-blue-accent transition-colors">
          Blog
        </a>
        <a href="https://trueviewsewer.com/#contact" class="text-slate-foreground hover:text-blue-accent transition-colors">
          Contact
        </a>
        <a href="https://trueviewsewer.com/#booking" class="bg-blue-accent text-white px-4 py-2 rounded font-medium hover:bg-blue-accent/90 transition-colors text-center">
          Schedule Now
        </a>
      </div>
    </nav>
  </div>
</header>

<script>
  const mobileMenuButton = document.getElementById('mobile-menu-button');
  const mobileMenu = document.getElementById('mobile-menu');
  
  mobileMenuButton?.addEventListener('click', () => {
    mobileMenu?.classList.toggle('hidden');
  });
</script>